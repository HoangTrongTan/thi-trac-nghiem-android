<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.CauHoi"
    android:orientation="vertical"
    android:background="@drawable/cauhoi"
    >


        <ImageButton
            android:id="@+id/ngungtrochoi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nha"
            android:layout_gravity="end"
            />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/anhdaidien"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/anhdaidien"
        android:elevation="20dp"

        />


    <com.example.tracnghiem.CustomTextView.RB
        android:id="@+id/dem_so"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#E67575"
        android:textSize="80dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/cauhoi"
        android:layout_marginTop="-8dp"
        android:padding="20dp"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_w"
        android:elevation="20dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:text="câu 1: Con chó có 7 chân với ba mũi đúng không ?"
        />


    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button

                android:gravity="start"
                android:padding="5dp"
                android:id="@+id/da_a"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="câu a"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_button_cautraloi"
                android:textColor="#FFF"
                android:elevation="20dp"
                />
            <Button
                android:gravity="start"
                android:padding="5dp"
                android:elevation="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/da_b"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="câu b"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_button_cautraloi"
                android:textColor="#FFF"
                />
            <Button
                android:gravity="start"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/da_c"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="câu c"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_button_cautraloi"
                android:textColor="#FFF"
                android:elevation="20dp"
                />
            <Button
                android:gravity="start"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/da_d"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="câu d"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_button_cautraloi"
                android:textColor="#FFF"
                android:elevation="20dp"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>